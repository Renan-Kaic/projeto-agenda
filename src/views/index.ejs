<%- include('./includes/head.ejs') %>
<%- include('./includes/nav.ejs') %>

<title>Contatos</title>


<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-5">

       <h3 class="display-4 text-center">Contatos</h3>
      <!--<p class="text-center lead"></p> -->
      
      <%- include('./includes/alertMsg.ejs') %> 
    
      <div class="responsive-table my-3">
        <table class="table">

          <% contatos.forEach(contato => {%>
            <tr>
              
              <td> <%= contato.Nome  %> </td>
              <td> <%= contato.Sobrenome  %> </td>
              <td> <%= contato.Telefone  %> </td>
              <td> <%= contato.Email  %> </td>
              <td> <a href="/contato/editar/<%= contato._id %> ">Editar</a> </td>
              <td> <a  class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a> </td>

            </tr>
          <% }) %>  
         
        </table>
      </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./includes/footer.ejs') %>
